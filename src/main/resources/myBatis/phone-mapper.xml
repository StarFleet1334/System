<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.app.dao.IPhonesDao">

    <resultMap id="phoneResultMap" type="com.solvd.app.tables.Phones">
        <id column="id" property="id"/>
        <id column="full_name" property="full_name"/>
        <id column="phone_number" property="phone_number"/>
    </resultMap>


    <sql id="body">
        p.id,
        p.full_name,
        p.phone_number
    </sql>

    <select id="getAll" resultMap="phoneResultMap">
        SELECT *
        FROM phones
    </select>

    <select id="get" resultMap="phoneResultMap">
        SELECT
        <include refid="body"/>
        FROM phones p
        WHERE id=#{id}
    </select>

    <select id="delete">
        DELETE
        FROM phones
        WHERE id=#{id}
    </select>


    <select id="create">
        INSERT INTO phones (id,full_name,phone_number)
        VALUES (#{id},#{full_name},#{phone_number})
    </select>


    <select id="update">
        UPDATE phones
        set full_name=#{full_name},phone_number=#{phone_number}
        WHERE id=#{id}
    </select>
</mapper>